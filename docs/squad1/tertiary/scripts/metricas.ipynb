# --- cedula 1 ---
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

data = {
    "Custo": ["A5","A6","A12","A24","A30","A37","A68"],
    "Precisão": ["A5","A6","A7","A10","A12","A16","A17","A22","A24","A27","A30","A36",
                 "A37","A41","A44","A51","A52","A54","A58","A59","A60","A61","A62","A65","A66","A67","A68"],
    "Produtividade": ["A5","A6","A17","A22","A24","A27","A30","A33","A37","A60","A68"],
    "Qualidade": ["A5","A6","A7","A12","A16","A17","A18","A22","A24","A27","A30","A33",
                  "A36","A37","A38","A41","A48","A49","A54","A59","A60","A61","A65","A68"],
    "Recall": ["A6","A7","A10","A17","A36","A37","A44","A52","A54","A58","A61","A62","A65","A66","A68"],
    "Segurança": ["A5","A6","A17","A22","A27","A30","A36","A37","A38","A51","A54","A59","A67","A68"],
    "Redução de Esforço": ["A6","A7","A22","A27","A30","A37","A67","A68"],
    "Correção Funcional": ["A7","A16","A17","A18","A19","A22","A27","A36","A37","A41","A51","A59","A60","A62","A67","A68"],
    "Carga Cognitiva": ["A12","A30","A60"],
    "Cobertura": ["A16","A36","A50","A54","A67","A68"],
    "Coerência": ["A19","A22","A24","A30","A60","A61","A68"]
}

import pandas as pd

rows = []
for metric, articles in data.items():
    for article in articles:
        rows.append({"Artigo": article, "Métrica": metric})

df = pd.DataFrame(rows)
df.head()

import matplotlib.pyplot as plt

freq = df["Métrica"].value_counts().sort_values(ascending=True)

plt.figure(figsize=(10, 7))

bars = plt.barh(freq.index, freq.values)

for bar in bars:
    width = bar.get_width()
    plt.text(
        width + 0.5,
        bar.get_y() + bar.get_height() / 2,
        f"{int(width)}",
        va="center",
        fontsize=10
    )

plt.xlabel("Número de artigos")
plt.ylabel("Métrica")
plt.title("Frequência de uso das métricas")

# --- cedula 2 ---
# Tabela binária: Artigo x Métrica
binaria = pd.crosstab(df["Artigo"], df["Métrica"])

# Matriz de coocorrência: Métrica x Métrica
cooc = binaria.T.dot(binaria)

cooc

# --- cedula 3 ---
import numpy as np
import seaborn as sns
import matplotlib.pyplot as plt

mask = np.triu(np.ones_like(cooc, dtype=bool), k=0)

plt.figure(figsize=(14, 12))

ax = sns.heatmap(
    cooc,
    mask=mask,
    cmap="mako",
    annot=cooc.where(~mask),
    fmt=".0f",
    linewidths=0.6,
    linecolor="white",
    square=True,
    cbar_kws={
        "label": "Número de Coocorrências",
        "shrink": 0.85
    },
    annot_kws={"size": 9}
)

ax.set_title(
    "Heatmap de Coocorrência entre Métricas",
    fontsize=16,
    pad=20
)

labels = list(cooc.columns)
n = len(labels)

ax.set_xticks(np.arange(0, n-1) + 0.5)
ax.set_xticklabels(labels[:-1], rotation=45, ha="right", fontsize=10)

ax.set_yticks(np.arange(1, n) + 0.5)
ax.set_yticklabels(cooc.index[1:], fontsize=10)

for spine in ax.spines.values():
    spine.set_visible(False)

plt.tight_layout()

plt.savefig(
    "heatmap_triangular_coocorrencia_FINAL_CEIA.pdf",
    format="pdf",
    bbox_inches="tight"
)

plt.show()
